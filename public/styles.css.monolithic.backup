}

.main-frame-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.main-frame-title-input {
    width: 100%;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    background: transparent;
    border: 2px solid transparent;
    border-radius: var(--radius-md);
    padding: 0.5rem;
    transition: all 0.2s ease;
    font-family: inherit;
}

.main-frame-title-input:hover {
    background: var(--bg-secondary);
    border-color: var(--border-color);
}

.main-frame-title-input:focus {
    outline: none;
    background: var(--bg-primary);
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.main-frame-metadata {
    color: var(--text-secondary);
    font-size: 0.875rem;
    display: flex;
    gap: 1rem;
    margin-bottom: 0.5rem;
}

.main-frame-actions {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
}

.main-frame-notes {
    margin-bottom: 1.5rem;
}

.notes-label {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    display: flex;
