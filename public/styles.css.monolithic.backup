}

.storyboard-frame-thumb {
    width: 100%;
    height: 120px;
    object-fit: cover;
    display: block;
}

.storyboard-frame-info {
    padding: 0.75rem;
}

.storyboard-frame-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.storyboard-frame-meta {
    font-size: 0.75rem;
    color: var(--text-secondary);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.storyboard-frame-index {
    background: var(--bg-secondary);
    padding: 0.125rem 0.375rem;
    border-radius: var(--radius-sm);
    font-weight: 500;
}

/* Main Frame Details Panel */
.main-frame-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
}

.main-frame-title-section {
