    border-radius: var(--radius-lg);
    padding: 2rem 1.5rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.project-option-card:hover {
    border-color: var(--primary-color);
    background: rgba(99, 102, 241, 0.05);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.project-option-card .option-icon {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
    transition: transform 0.3s ease;
}

.project-option-card:hover .option-icon {
    transform: scale(1.1);
}

.project-option-card h5 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.project-option-card p {
    color: var(--text-secondary);
    font-size: 0.875rem;
    line-height: 1.4;
    margin: 0;
}

/* Modal Component Improvements */
.modal-header {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--bg-primary);
}

.modal-header h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
}

.modal-body {
    padding: 2rem;
    background: var(--bg-primary);
}

.modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    border-radius: 50%;
    width: 2.5rem;
    height: 2.5rem;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    font-size: 1rem;
}

.modal-close:hover {
    background: rgba(0, 0, 0, 0.7);
    transform: scale(1.05);
}

/* Responsive Modal */
@media (max-width: 768px) {
    .modal-content {
        min-width: unset;
        max-width: 95vw;
        margin: 1rem;
    }

    .modal-header,
    .modal-body {
        padding: 1.25rem;
    }

    .project-option-cards {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .project-option-card {
        padding: 1.5rem 1rem;
    }
}

@media (max-width: 480px) {
    .header-content {
        padding: 1.5rem;
    }

    .upload-card {
        padding: 1.5rem;
    }

    .results-header {
        padding: 1rem;
        /* Smaller padding for very small screens */
    }

    .bulk-actions-container {
        top: 160px;
        /* Further adjusted for smaller mobile screens with two-row header */
    }

    .gallery-container {
        padding-top: 240px;
        /* Increased for mobile with taller header */
    }

    /* When header is hidden on very small screens */
    .header.gallery-mode~.main .gallery-container {
        padding-top: 160px;
    }

    @media (max-width: 600px) {
        .gallery-container {
            padding-top: 240px !important;
            /* Further reduced for very small screens */
        }
    }

    .bulk-actions-container .selection-info {
        padding: 0.75rem;
    }

    .bulk-actions-container .bulk-actions {
        gap: 0.25rem;
    }

    .bulk-actions-container .action-btn.small {
        padding: 0.25rem 0.5rem;
        font-size: 0.8rem;
    }

    .gallery {
        grid-template-columns: 1fr;
        gap: 0.75rem;
        /* Smaller gap for mobile */
    }

    .tab-nav {
        flex-direction: column;
    }

    .results-actions {
        flex-direction: column;
        width: 100%;
    }
}

/* Animation Classes */
.fade-in {
    animation: fadeIn 0.3s ease-in-out;
}

.slide-up {
    animation: slideUp 0.3s ease-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* File selected state */
.file-selected .file-drop-area {
    border-color: var(--accent-color);
    background: rgb(16 185 129 / 0.05);
}

.file-selected .file-drop-content i {
    color: var(--accent-color);
}

.file-name {
    margin-top: 0.5rem;
    padding: 0.5rem;
    background: var(--bg-secondary);
    border-radius: var(--radius-sm);
    font-weight: 500;
    color: var(--text-primary);
}

/* Settings Tab */
.settings-section {
    padding: 1rem 0;
}

.settings-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.settings-description {
    color: var(--text-secondary);
