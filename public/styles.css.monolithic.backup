}

/* ===== DRAG AND DROP VISUAL FEEDBACK ===== */

/* Drag cursor states */
.keyframe-item[draggable="true"] {
    cursor: grab;
}

.keyframe-item[draggable="true"]:active {
    cursor: grabbing;
}

/* Dragging state - make item semi-transparent and slightly smaller */
.keyframe-item.dragging {
    opacity: 0.6;
    transform: scale(0.95) rotate(2deg);
    z-index: 1000;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    transition: none;
    /* Disable transitions during drag */
}

/* Drop zone indicators - blue lines above and below target frames */
.keyframe-item.drop-before::before {
    content: '';
    position: absolute;
    top: -4px;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    border-radius: 2px;
    z-index: 1001;
    animation: dropIndicatorPulse 1s ease-in-out infinite alternate;
    box-shadow: 0 0 8px rgba(99, 102, 241, 0.5);
}

.keyframe-item.drop-after::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    border-radius: 2px;
    z-index: 1001;
    animation: dropIndicatorPulse 1s ease-in-out infinite alternate;
    box-shadow: 0 0 8px rgba(99, 102, 241, 0.5);
}

/* Pulse animation for drop indicators */
@keyframes dropIndicatorPulse {
    0% {
        opacity: 0.8;
        transform: scaleY(1);
    }

    100% {
        opacity: 1;
        transform: scaleY(1.2);
    }
}

/* Enhanced drop zone feedback - highlight target area */
.keyframe-item.drop-before,
.keyframe-item.drop-after {
    background: rgba(99, 102, 241, 0.05);
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.3);
    transform: translateY(0) scale(1.02);
}

/* Gallery-wide drag state */
.gallery.drag-active {
    background: rgba(99, 102, 241, 0.02);
}

.gallery.drag-active .keyframe-item:not(.dragging):not(.drop-before):not(.drop-after) {
    opacity: 0.7;
    transform: scale(0.98);
    transition: all 0.2s ease;
}

/* Prevent text selection during drag */
.gallery.drag-active {
    user-select: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
}

/* Drop zone hover effects for better visual feedback */
.keyframe-item.drop-before:hover::before,
.keyframe-item.drop-after:hover::after {
    height: 6px;
    animation-duration: 0.5s;
}

/* Dragging item enhanced shadow for depth */
.keyframe-item.dragging .keyframe-container {
    box-shadow:
        0 15px 35px rgba(0, 0, 0, 0.2),
        0 5px 15px rgba(0, 0, 0, 0.1);
}

/* Ensure drag indicators appear above everything */
.keyframe-item.drop-before::before,
.keyframe-item.drop-after::after {
    z-index: 1002;
}

/* Mobile touch support for drag operations */
@media (max-width: 768px) {
    .keyframe-item[draggable="true"] {
        cursor: pointer;
        /* Use pointer on mobile */
    }

    .keyframe-item.drop-before::before,
    .keyframe-item.drop-after::after {
        height: 6px;
        /* Larger indicators for touch */
    }

    .keyframe-item.dragging {
        transform: scale(0.9) rotate(3deg);
        /* More dramatic effect on mobile */
    }
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {

    .keyframe-item.drop-before::before,
    .keyframe-item.drop-after::after {
        animation: none;
    }

    .keyframe-item.dragging {
        transform: scale(0.95);
        /* Remove rotation for motion-sensitive users */
    }
}

/* Drawing functionality styles */
.image-container {
    position: relative;
    display: inline-block;
    max-width: 90vw;
    max-height: 70vh;
}

.image-container img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    display: block;
}

.drawing-canvas {
    position: absolute;
    top: 0;
    left: 0;
    cursor: crosshair;
    pointer-events: none;
    z-index: 10;
}

.drawing-canvas.drawing-mode {
    pointer-events: auto;
}

.drawing-controls {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 1rem 0;
    padding: 1rem;
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
    flex-wrap: wrap;
    justify-content: center;
}

.drawing-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--primary-color);
    color: white;
    border: none;
    border-radius: var(--radius-sm);
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
}

.drawing-btn:hover {
    background: var(--primary-dark);
    transform: translateY(-1px);
}

.drawing-btn.active {
    background: var(--accent-color);
}

.drawing-btn.secondary {
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    color: var(--text-primary);
}

.drawing-btn.secondary:hover {
    background: var(--hover-overlay);
}

.drawing-settings {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem;
    background: var(--bg-primary);
    border-radius: var(--radius-sm);
    border: 1px solid var(--border-color);
}

.drawing-settings label {
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-weight: 500;
}

.brush-slider {
    width: 60px;
    height: 4px;
    background: var(--border-color);
    outline: none;
    border-radius: 2px;
    cursor: pointer;
}

.brush-slider::-webkit-slider-thumb {
    appearance: none;
    width: 16px;
    height: 16px;
    background: var(--primary-color);
    border-radius: 50%;
    cursor: pointer;
}

.brush-slider::-moz-range-thumb {
    width: 16px;
    height: 16px;
    background: var(--primary-color);
    border-radius: 50%;
    cursor: pointer;
    border: none;
}

.color-picker {
    width: 40px;
    height: 32px;
    border: none;
    border-radius: var(--radius-sm);
    cursor: pointer;
    background: none;
    outline: none;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .drawing-controls {
        flex-direction: column;
        gap: 0.75rem;
    }

    .drawing-settings {
        flex-wrap: wrap;
        justify-content: center;
    }

    .image-container {
        max-width: 95vw;
        max-height: 60vh;
    }
}

/* Animation for drawing mode toggle */
.drawing-canvas {
    transition: opacity 0.2s ease;
}

.drawing-canvas.hidden {
    opacity: 0;
    pointer-events: none;
}

.drawing-canvas:not(.hidden) {
    opacity: 1;
}